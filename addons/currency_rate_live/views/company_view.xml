<openerp>
    <data>
        <record model="ir.ui.view" id="currency_update">
            <field name="name">res.company.form.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='account_grp']" position="after">
                    <separator string="Currency rate updates services" colspan="4"/>
                    <group>
                        <field name="currency_rate_live_interval"></field>
                    </group>
                    <group>
                        <button name="btn_update_currency" class="oe_button" string="Update Now" type='object'/>
                    </group>
                        <field name="display_list" colspan="4" nolabel="1"></field>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
