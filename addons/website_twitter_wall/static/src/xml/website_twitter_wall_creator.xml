<?xml version="1.0" encoding="UTF-8"?>
<templates id="template">
    <t t-name="create_twitter_wall">
        <div class="modal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">Ã—</button>
                        <h3 class="modal-title">New Twitter Wall</h3>
                    </div>
                    <div class="wall-creating text-center hidden"><h4><i class='fa fa-spinner fa-spin' /> Creating new wall...</h4></div>
                    <div class="modal-body">
                        <div class="error_msg" />
                        <form class="clearfix form-horizontal">
                            <div class="form-group control-group">
                                <img src="/website_twitter_wall/static/src/img/document.png" class="col-sm-4 img-responsive image" title="Preview" />
                                <ul class="col-sm-8 list-group">
                                    <li class="list-group-item active">
                                        <h5 class="list-group-item-heading">
                                            <label class="control-label">
                                                Upload Image File
                                            </label>
                                        </h5>
                                        <input type="file" class="image_upload" accept="image/*" />
                                    </li>
                                    <li class="list-group-item">
                                        <h5 class="list-group-item-heading">
                                            <label class="control-label">
                                                Image URL
                                            </label>
                                        </h5>
                                        <input type="text" class="form-control image_url" placeholder="http://www.odoo.com/logo.png" />
                                        <p class="url-error hidden">Wrong input. please enter valid image URL</p>
                                    </li>
                                </ul>
                            </div>
                            <div class="form-group control-group">
                                <label class="col-sm-2 control-label">
                                    Name:
                                </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control text-wallname" placeholder="Wall Name" />
                                </div>
                            </div>
                            <div class="form-group control-group">
                                <label class="col-sm-2 control-label">
                                    Description:
                                </label>
                                <div class="col-sm-10">
                                    <textarea rows="4" placeholder="Description" class="form-control text-description" maxlength="3000" />
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-primary draft">Create Draft</a>
                        <a class="btn btn-primary save">Create and Publish</a>
                        <button class="btn btn-default" data-dismiss="modal" data-action="discard">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>