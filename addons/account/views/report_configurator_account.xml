<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_account_configurator" inherit_id="account.report_configurator" primary="True">
    <xpath expr="//select[@name='target_move']" position="after">
        <label for="filter">Display Accounts :</label>
            <select name="filter" class="form-control">
                <option t-if="data['form']['filter'] == 'all'" selected="selected" value="all">Display all accounts</option>
                <option t-if="data['form']['filter'] != 'all'" value="all">Display all accounts</option>
                <option t-if="data['form']['filter'] == 'movement'" selected="selected" value="movement">Display accounts with movement</option>
                <option t-if="data['form']['filter'] != 'movement'" value="movement">Display accounts with movement</option>
                <option t-if="data['form']['filter'] == 'not_zero'" selected="selected" value="not_zero">Display accounts where balance is not equal to zero</option>
                <option t-if="data['form']['filter'] != 'not_zero'" value="not_zero">Display accounts where balance is not equal to zero</option>
            </select>
    </xpath>
</template>
</data>
</openerp>
