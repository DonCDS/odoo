<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="WidgetWebsiteButton">
        <div class="oe_WidgetWebsiteButton success">
            <strong class="oe_unpublish text-danger">Not Published</strong>
            <strong class="oe_publish text-success">Published</strong>
        </div>
    </t>

    <t t-name="FieldTextHtml">
        <div t-att-class="'oe_form_field oe_form_field_html' + (widget.get('effective_readonly') ? ' oe_form_embedded_html' : '')"
                t-att-style="widget.node.attrs.style">
            <t t-if="! widget.get('effective_readonly')">
                <iframe src="/?debug&amp;enable_editor=1" style="
display: block;
width: 100%;
border: 1px solid #ccc;
padding: 0;
margin: 0;
min-height: 300px;"/>
            </t>
        </div>
    </t>

</templates>
