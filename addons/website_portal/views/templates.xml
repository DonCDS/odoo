<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="assets_frontend" inherit_id="website.assets_frontend" name="Account Manager">
      <xpath expr="." position="inside">
          <link rel='stylesheet' href='/website_portal/static/src/css/website_portal.less'/>
      </xpath>
    </template>

    <template id="account" name="Account">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="row">
                        <h1 class="text-center">Your Account</h1>
                        <h2 class="text-center text-muted">Manage your contracts and sales documents</h2>
                    </div>
                    <div class="col-md-9">
                        <t t-if="inst_analytic" >
                            <t t-call="website_portal.contracts" />
                        </t>
                        <t t-if="inst_sale">
                            <t t-call="website_portal.quotations" />
                            <t t-call="website_portal.sale_orders" />
                            <t t-call="website_portal.invoices" />
                        </t>
                    </div>
                    <div class="col-md-3">
                        <t t-call="website_portal.contact" />
                        <div class="oe_structure"/>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </div>
        </t>
    </template>

    <template id="website_portal.custom_panel" inherit_id='website_portal.account' customize_show="True" name="Editable Panel" active="False">
        <xpath expr="//div[@class='col-md-3']" position="after">
            <div class="col-md-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Edit this title.
                    </div>
                    <div class="panel-body">
                        <p>Place your content here.</p>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="contact" name="Contact">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Contact</h3>
            </div>
            <div class="panel-body">
                <t t-if="sales_rep">
                    <h4>Your Sales Representative</h4>
                    <h5 t-esc="sales_rep.name"/>
                    <p><a t-att-href="'mailto:'+sales_rep.email" t-esc="sales_rep.email"/></p>
                    <p t-esc="sales_rep.phone"/>
                    <p t-esc="sales_rep.city"/>
                </t>
                <h4 t-esc="company.name"/>
                <p t-esc="company.phone"/>
                <p><a t-att-href="'mailto:'+company.email" t-esc="company.email"/></p>
                <p t-esc="company.city"/>
                
            </div>
        </div>

    </template>

    <template id="contracts" name="Contracts">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your Subscriptions</h3>
            </div>
            <div class="panel-body">
                <t t-if="not cust_accounts">
                    <p>You don't have any subscriptions yet.</p>
                </t>
                <t t-if="cust_accounts">
                    <table class="table table-hover">
                        <thead>
                            <th>Name</th>
                            <th>Payment</th>
                            <th>Status</th>
                        </thead>
                        <t t-foreach="cust_accounts" t-as="account">
                            <tr>
                                <td><a t-att-href="'/account/contract/'+str(account.id)"><t t-esc="account.name"/></a></td>
                                <td>XX â‚¬/month</td>
                                <td>
                                    <t t-if="account.state == 'open'">
                                        <span class="label label-success"><i class="fa fa-fw fa-check"/> Running</span>
                                    </t>
                                    <t t-if="account.state == 'pending'">
                                        <span class="label label-warning"><i class="fa fa-fw fa-refresh"/> To Renew</span>
                                    </t>
                                    <t t-if="account.state == 'close'">
                                        <span class="label label-default"><i class="fa fa-fw fa-remove"/> Closed</span>
                                    </t>
                                    <t t-if="account.state == 'cancelled'">
                                        <span class="label label-danger"><i class="fa fa-fw fa-ban"/> Cancelled</span>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </table>
                </t>
            </div>
        </div>
    </template>

    <template id="quotations" name="Quotations">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Current Quotations</h3>
            </div>
            <div class="panel-body">
                <t t-if="not cust_quotations">
                    <p>There are currently no quotations for your account.</p>
                </t>
                <t t-if="cust_quotations">
                    <table class="table table-hover">
                        <thead>
                            <th>Quotation #</th>
                            <th>Order Date</th>
                            <th>Total</th>
                        </thead>
                        <t t-foreach="cust_quotations" t-as="quotation">
                            <tr>
                                <td>                                   
                                    <a t-att-href="'report/pdf/sale.report_saleorder/'+str(quotation.id)"><t t-esc="quotation.name"/></a>
                                </td>
                                <td><t t-esc="quotation.date_order"/></td>
                                <td><span t-field="quotation.amount_total" t-field-options='{"widget": "monetary", "display_currency": "quotation.company_id.currency_id"}'/></td>
                            </tr>
                        </t>
                    </table>
                </t>
            </div>
        </div>
    </template>

    <template id="sale_orders" name="Sale Oders">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your Orders</h3>
            </div>
            <div class="panel-body">
                <t t-if="not cust_orders">
                    <p>There are currently no orders for your account.</p>
                </t>
                <t t-if="cust_orders">
                    <table class="table table-hover">
                        <thead>
                            <th>Sale Order #</th>
                            <th>Confirmation Date</th>
                            <th>Total</th>
                            <th>Status</th>
                        </thead>
                        <t t-foreach="cust_orders" t-as="order">
                            <tr>
                                <td>
                                    <a t-att-href="'report/pdf/sale.report_saleorder/'+str(order.id)"><t t-esc="order.name"/></a>
                                </td>
                                <td><t t-esc="order.date_confirm"/></td>
                                <td><span t-field="order.amount_total" t-field-options='{"widget": "monetary", "display_currency": "order.company_id.currency_id"}'/></td>
                                <td>
                                    <t t-if="order.state == 'progress'">
                                        <span class="label label-info"><i class="fa fa-fw fa-clock-o"/> Waiting for Payment</span>
                                    </t>
                                    <t t-if="order.state == 'manual'">
                                        <span class="label label-success"><i class="fa fa-fw fa-check"/> New</span>
                                    </t>
                                    <t t-if="order.state in ['shipping_except','invoice_excpet']">
                                        <span class="label label-danger"><i class="fa fa-fw fa-warning"/> Problem</span>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </table>
                </t>
            </div>
        </div>
    </template>

    <template id="sale_backend_link" inherit_id='website_portal.sale_orders' customize_show="True" name="Link to Sales Backend" active="False">
        <xpath expr="//div[@class='panel-body']" position="inside">
            <div class="text-center">
                <a href="/web#action=portal_sale.action_orders_portal" class="btn btn-primary">Access the complete Sale application</a>
            </div>
        </xpath>
    </template>

    <template id="invoices" name="Invoices and Payments"> 
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Your Invoices and Payments</h3>
            </div>
            <div class="panel-body">
                <t t-if="not cust_invoices">
                    <p>There are currently no invoices for your account.</p>
                </t>
                <t t-if="cust_invoices">
                    <table class="table table-hover">
                        <thead>
                            <th>Invoice #</th>
                            <th>Invoice Date</th>
                            <th>Total</th>
                            <th>Due Date</th>
                            <th>Status</th>
                        </thead>
                        <t t-foreach="cust_invoices" t-as="invoice">
                            <tr>
                                <td>
                                    <a t-att-href="'report/pdf/account.report_invoice/'+str(invoice.id)"><t t-esc="invoice.number"/></a>
                                </td>
                                <td><t t-esc="invoice.date_invoice"/></td>
                                <td><span t-field="invoice.amount_total" t-field-options='{"widget": "monetary", "display_currency": "invoice.company_id.currency_id"}'/></td>
                                <td><t t-esc="invoice.date_due"/></td>
                                <td>
                                    <t t-if="invoice.state == 'open'">
                                        <span class="label label-info"><i class="fa fa-fw fa-clock-o"/> Waiting for Payment</span>
                                    </t>
                                    <t t-if="invoice.state == 'paid'">
                                        <span class="label label-success"><i class="fa fa-fw fa-check"/> Paid</span>
                                    </t>
                                    <t t-if="invoice.state == 'cancel'">
                                        <span class="label label-default"><i class="fa fa-fw fa-remove"/> Cancelled</span>
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </table>
                </t>
            </div>
        </div>
    </template>

    <template id="my_account_link" name="Link to frontend portal" inherit_id="website.layout">
        <xpath expr="//li[@class='dropdown']/ul/li[contains(.,'Logout')]" position="before">
            <li><a href="/account" role="menuitem">My Account</a></li>
        </xpath>
    </template>


</odoo>