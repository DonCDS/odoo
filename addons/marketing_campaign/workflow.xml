<openerp>
	<data>
		<!-- Campaign Workflow -->
		<record model="workflow" id="wkf_campaign">
			<field name="name">Lead Automation Campaign workflow</field>
			<field name="osv">marketing.campaign.campaign</field>
			<field name="on_create">True</field>
		</record>

		<record model="workflow.activity" id="campaign_draft">
			<field name="name">Draft</field>
			<field name="wkf_id" ref="wkf_campaign"/>
			<field name="flow_start" eval="True"/>
			<field name="kind">function</field>
			<field name="action">action_draft()</field>
		</record>
		<record model="workflow.activity" id="campaign_running">
			<field name="name">Running</field>
			<field name="wkf_id" ref="wkf_campaign"/>
			<field name="kind">function</field>
			<field name="action">action_run()</field>
		</record>
		<record model="workflow.activity" id="campaign_done">
			<field name="name">Done</field>
			<field name="wkf_id" ref="wkf_campaign"/>
			<field name="kind">function</field>
			<field name="action">action_done()</field>
		</record>
		<record model="workflow.activity" id="campaign_cancelled">
			<field name="name">Cancelled</field>
			<field name="wkf_id" ref="wkf_campaign"/>
			<field name="kind">function</field>
			<field name="action">action_cancel()</field>
		</record>

		<record model="workflow.transition" id="campaign_draft_to_running">
			<field name="act_from" ref="campaign_draft"/>
			<field name="act_to" ref="campaign_running"/>
			<field name="signal">running</field>
		</record>
		<record model="workflow.transition" id="campaign_done_to_draft">
			<field name="act_from" ref="campaign_done"/>
			<field name="act_to" ref="campaign_draft"/>
			<field name="signal">draft</field>
		</record>
		<record model="workflow.transition" id="campaign_running_to_done">
			<field name="act_from" ref="campaign_running"/>
			<field name="act_to" ref="campaign_done"/>
			<field name="signal">done</field>
		</record>
		<record model="workflow.transition" id="campaign_running_to_cancelled">
			<field name="act_from" ref="campaign_running"/>
			<field name="act_to" ref="campaign_cancelled"/>
			<field name="signal">cancelled</field>
		</record>
		<record model="workflow.transition" id="campaign_cancelled_to_draft">
			<field name="act_from" ref="campaign_cancelled"/>
			<field name="act_to" ref="campaign_draft"/>
			<field name="signal">draft</field>
		</record>

		<!-- Segment Workflow -->
		<record model="workflow" id="wkf_segment">
			<field name="name">Lead Automation Segment workflow</field>
			<field name="osv">marketing.campaign.segment</field>
			<field name="on_create">True</field>
		</record>

		<record model="workflow.activity" id="segment_draft">
			<field name="name">Draft</field>
			<field name="wkf_id" ref="wkf_segment"/>
			<field name="flow_start" eval="True"/>
			<field name="kind">function</field>
			<field name="action">action_draft()</field>
		</record>
		<record model="workflow.activity" id="segment_running">
			<field name="name">Running</field>
			<field name="wkf_id" ref="wkf_segment"/>
			<field name="kind">function</field>
			<field name="action">action_run()</field>
		</record>
		<record model="workflow.activity" id="segment_done">
			<field name="name">Done</field>
			<field name="wkf_id" ref="wkf_segment"/>
			<field name="kind">function</field>
			<field name="action">action_done()</field>
		</record>
		<record model="workflow.activity" id="segment_cancelled">
			<field name="name">Cancelled</field>
			<field name="wkf_id" ref="wkf_segment"/>
			<field name="kind">function</field>
			<field name="action">action_cancel()</field>
		</record>

		<record model="workflow.transition" id="segment_draft_to_running">
			<field name="act_from" ref="segment_draft"/>
			<field name="act_to" ref="segment_running"/>
			<field name="signal">running</field>
		</record>
		<record model="workflow.transition" id="segment_done_to_draft">
			<field name="act_from" ref="segment_done"/>
			<field name="act_to" ref="segment_draft"/>
			<field name="signal">draft</field>
		</record>
		<record model="workflow.transition" id="segment_running_to_done">
			<field name="act_from" ref="segment_running"/>
			<field name="act_to" ref="segment_done"/>
			<field name="signal">done</field>
		</record>
		<record model="workflow.transition" id="segment_running_to_cancelled">
			<field name="act_from" ref="segment_running"/>
			<field name="act_to" ref="segment_cancelled"/>
			<field name="signal">cancelled</field>
		</record>
		<record model="workflow.transition" id="segment_cancelled_to_draft">
			<field name="act_from" ref="segment_cancelled"/>
			<field name="act_to" ref="segment_draft"/>
			<field name="signal">draft</field>
		</record>
	</data>
</openerp>
